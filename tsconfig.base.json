{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@web3-hooks/core": ["packages/core/src/index.ts"],
      "@web3-hooks/react": ["packages/react/src/index.ts"],
      "@web3-hooks/adapter-evm-viem": ["packages/adapter-evm-viem/src/index.ts"]
    }
  }
}
